# Database
POSTGRES_DB=mydb
POSTGRES_USER=flyway_user
# DO NOT put real password here. Set POSTGRES_PASSWORD in your local .env (ignored by git)
POSTGRES_PASSWORD=changeme

# Ports (local only)
PG_HOST_PORT=5432
PGADMIN_HOST_PORT=8080

# pgAdmin account (example)
PGADMIN_DEFAULT_EMAIL=admin@example.com
# PGADMIN_DEFAULT_PASSWORD=admin   # DO NOT commit real password

# Flyway (optional override)
FLYWAY_USER=flyway_user
FLYWAY_PASSWORD=changeme   # keep secrets in .env or secret manager

# Convenience: image tags (pin if you want)
POSTGRES_IMAGE=postgres:17
FLYWAY_IMAGE=flyway/flyway:11.11
PGADMIN_IMAGE=dpage/pgadmin4:7

# Redis
REDIS_IMAGE=redis:7
REDIS_HOST_PORT=6379
REDIS_APPENDONLY=yes

# MinIO
MINIO_IMAGE=minio/minio:latest
MINIO_HOST_PORT=9000
MINIO_CONSOLE_HOST_PORT=9001
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=minioadmin    # placeholder â€” DO NOT commit real secrets
MINIO_ROOT_PASSWORD=minioadmin123

ENVIRONMENT=dev
